{
    "getAll": {
        "description": "Gets all entries from 'artists'",
        "route": "/artists",
        "method": "GET",
        "sql": "SELECT * FROM artists",
        "auth_required": false,
        "allowed_roles": [
            "*"
        ]
    },
    "getById": {
        "description": "Gets an entry from 'artists' by its primary key",
        "route": "/artists/$artistId",
        "method": "GET",
        "sql": "SELECT * FROM artists WHERE artistId = $artistId",
        "auth_required": false,
        "allowed_roles": [
            "*"
        ]
    },
    "create": {
        "description": "Creates a new entry in 'artists'",
        "route": "/artists",
        "method": "POST",
        "sql": "INSERT INTO artists (nombre, avatarUrl) VALUES ($nombre, $avatarUrl)",
        "request_body_params": [
            "nombre",
            "avatarUrl"
        ],
        "auth_required": true,
        "allowed_roles": [
            "*"
        ]
    },
    "update": {
        "description": "Updates an existing entry in 'artists' by its primary key",
        "route": "/artists/$artistId",
        "method": "PUT",
        "sql": "UPDATE artists SET nombre = $nombre, avatarUrl = $avatarUrl WHERE artistId = $artistId",
        "request_body_params": [
            "nombre",
            "avatarUrl"
        ],
        "auth_required": true,
        "allowed_roles": [
            "*"
        ]
    },
    "delete": {
        "description": "Deletes an existing entry in 'artists' by its primary key",
        "route": "/artists/$artistId",
        "method": "DELETE",
        "sql": "DELETE FROM artists WHERE artistId = $artistId",
        "auth_required": true,
        "allowed_roles": [
            "*"
        ]
    }
}